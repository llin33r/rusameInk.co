    <div id="error-modal" class="modal">
        <div class="modal-content">
            <div style="font-size: 4em; color: #f44336; margin-bottom: 20px;">‚ö†Ô∏è</div>
            <h3 class="funny-title" style="font-size: 2em; color: #f44336;">–û–®–ò–ë–ö–ê!</h3>
            <p style="font-size: 1.2em; margin: 15px 0;">–†–£–°–ê–ú–ï –¥–æ—Å—Ç–æ–π–Ω—ã —Ç–æ–ª—å–∫–æ 5 –∑–≤–µ–∑–¥! –ü–æ–∂–∞–ª—É–π—Å—Ç–∞, –∏–∑–º–µ–Ω–∏—Ç–µ –æ—Ü–µ–Ω–∫—É.</p>
            <button onclick="closeModal('error-modal')" class="sticker-btn" style="background: #f44336;">
                –ò–°–ü–†–ê–í–ò–¢–¨
            </button>
        </div>
    </div>

    <script>
        // –ü–µ—Ä–µ–º–µ–Ω–Ω—ã–µ –¥–ª—è —Å—á–µ—Ç—á–∏–∫–æ–≤
        let passedCount = 500038;
        let todayCount = 10;

        // –§—É–Ω–∫—Ü–∏—è –¥–ª—è —Å–æ–∑–¥–∞–Ω–∏—è —á–∞—Å—Ç–∏—Ü
        function createParticle(element, increment) {
            const particle = document.createElement('div');
            particle.className = 'particle';
            particle.textContent = `+${increment}`;
            particle.style.left = Math.random() * 50 + 25 + '%';
            particle.style.top = '50%';
            
            element.appendChild(particle);
            
            // –£–¥–∞–ª—è–µ–º —á–∞—Å—Ç–∏—Ü—É –ø–æ—Å–ª–µ –∞–Ω–∏–º–∞—Ü–∏–∏
            setTimeout(() => {
                particle.remove();
            }, 1000);
        }

        // –§—É–Ω–∫—Ü–∏—è –æ–±–Ω–æ–≤–ª–µ–Ω–∏—è —Å—á–µ—Ç—á–∏–∫–æ–≤
        function updateCounters() {
            // –ì–µ–Ω–µ—Ä–∏—Ä—É–µ–º —Å–ª—É—á–∞–π–Ω—ã–µ –ø—Ä–∏—Ä–æ—Å—Ç—ã
            const passedIncrement = Math.floor(Math.random() * 3) + 1; // +1 –¥–æ +3
            const todayIncrement = Math.floor(Math.random() * 2) + 1; // +1 –¥–æ +2
            
            // –û–±–Ω–æ–≤–ª—è–µ–º –∑–Ω–∞—á–µ–Ω–∏—è
            passedCount += passedIncrement;
            todayCount += todayIncrement;
            
            // –û–±–Ω–æ–≤–ª—è–µ–º –æ—Ç–æ–±—Ä–∞–∂–µ–Ω–∏–µ (–±–µ–∑ –ø–ª—é—Å–∞ –≤ –∫–æ–Ω—Ü–µ)
            document.getElementById('passed-count').textContent = passedCount.toLocaleString('ru-RU');
            document.getElementById('today-count').textContent = todayCount;
            
            // –°–æ–∑–¥–∞–µ–º —á–∞—Å—Ç–∏—Ü—ã
            const passedElement = document.getElementById('passed-count').parentElement;
            const todayElement = document.getElementById('today-count').parentElement;
            
            createParticle(passedElement, passedIncrement);
            createParticle(todayElement, todayIncrement);
        }

        // –ó–∞–ø—É—Å–∫–∞–µ–º –æ–±–Ω–æ–≤–ª–µ–Ω–∏–µ —Å—á–µ—Ç—á–∏–∫–æ–≤ –∫–∞–∂–¥—ã–µ 5 —Å–µ–∫—É–Ω–¥
        setInterval(updateCounters, 5000);

        // –ü—Ä–æ—Å—Ç–∞—è –ª–æ–≥–∏–∫–∞ –∑–≤–µ–∑–¥–Ω–æ–≥–æ —Ä–µ–π—Ç–∏–Ω–≥–∞
        const stars = document.querySelectorAll('#star-rating span');
        const ratingInput = document.getElementById('rating-value');
        
        stars.forEach(star => {
            star.addEventListener('click', () => {
                const rating = star.getAttribute('data-rating');
                ratingInput.value = rating;
                
                stars.forEach(s => {
                    const sRating = s.getAttribute('data-rating');
                    if (sRating <= rating) {
                        s.style.color = '#ffeb3b';
                        s.style.textShadow = '0 0 5px #000';
                    } else {
                        s.style.color = '#ccc';
                        s.style.textShadow = 'none';
                    }
                });
            });
        });

        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –∑–≤–µ–∑–¥
        stars.forEach(star => {
            const rating = star.getAttribute('data-rating');
            if (rating <= 5) {
                star.style.color = '#ffeb3b';
                star.style.textShadow = '0 0 5px #000';
            }
        });

        // –§—É–Ω–∫—Ü–∏–∏ –¥–ª—è –º–æ–¥–∞–ª—å–Ω—ã—Ö –æ–∫–æ–Ω
        function showModal(modalId) {
            document.getElementById(modalId).style.display = 'flex';
        }

        function closeModal(modalId) {
            document.getElementById(modalId).style.display = 'none';
        }

        // –û–±—Ä–∞–±–æ—Ç–∫–∞ —Ñ–æ—Ä–º—ã –æ—Ç–∑—ã–≤–∞
        document.getElementById('feedback-form').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const rating = parseInt(document.getElementById('rating-value').value);
            
            if (rating === 5) {
                // –£—Å–ø–µ—à–Ω–∞—è –æ—Ç–ø—Ä–∞–≤–∫–∞
                showModal('success-modal');
                // –û—á–∏—â–∞–µ–º —Ñ–æ—Ä–º—É
                this.reset();
                // –°–±—Ä–∞—Å—ã–≤–∞–µ–º –∑–≤–µ–∑–¥—ã –∫ 5
                ratingInput.value = 5;
                stars.forEach(star => {
                    const starRating = parseInt(star.getAttribute('data-rating'));
                    if (starRating <= 5) {
                        star.style.color = '#ffeb3b';
                        star.style.textShadow = '0 0 5px #000';
                    }
                });
            } else {
                // –û—à–∏–±–∫–∞ - –Ω–µ 5 –∑–≤–µ–∑–¥
                showModal('error-modal');
            }
        });

        // –¢–∞–π–º–µ—Ä –æ–±—Ä–∞—Ç–Ω–æ–≥–æ –æ—Ç—Å—á–µ—Ç–∞
        function startCountdown(durationInSeconds) {
            let timer = durationInSeconds;
            const displayEl = document.getElementById('countdown-timer');
            const discountTimerEl = document.getElementById('discount-timer');

            const interval = setInterval(() => {
                const days = String(Math.floor(timer / (60 * 60 * 24))).padStart(2, '0');
                const hours = String(Math.floor((timer % (60 * 60 * 24)) / (60 * 60))).padStart(2, '0');
                const minutes = String(Math.floor((timer % (60 * 60)) / 60)).padStart(2, '0');
                const seconds = String(Math.floor(timer % 60)).padStart(2, '0');

                const timeString = `–¥–æ—Å—Ç—É–ø–Ω–æ ${hours}:${minutes}:${seconds} –î–ù–Ø!`;
                displayEl.textContent = timeString;
                discountTimerEl.textContent = `${hours}:${minutes}:${seconds} –î–ù–Ø`;

                if (--timer < 0) {
                    clearInterval(interval);
                    displayEl.textContent = "–°–ö–ò–î–ö–ê –ó–ê–ö–û–ù–ß–ï–ù–ê";
                    discountTimerEl.textContent = "–°–ö–ò–î–ö–ê –ó–ê–ö–û–ù–ß–ï–ù–ê";
                }
            }, 1000);
        }

        const initialDuration = (2 * 24 * 60 * 60) + (2 * 60 * 60) + (29 * 60) + 30;
        startCountdown(initialDuration);
    </script>
</body>
